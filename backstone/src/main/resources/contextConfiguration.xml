<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"> <!-- bean definitions here -->

    <!-- Bean 생성하기 -->
    <bean id="name" class="java.lang.String">
        <constructor-arg value="Bea"/>
    </bean>

    <bean id="age" class="java.lang.Integer">
        <constructor-arg value="23"/>
    </bean> 
    <!-- Spring이 Bean 관리하도록 설정하기 -->
    <bean id="elephant" class="LearningSpringBoot.backstone.animals.Elephant"/>

    <bean id="game_controller" class="LearningSpringBoot.backstone.animals.GameController">
        <constructor-arg ref="elephant"/>
    </bean>

    <bean id="play_zoo_game" class="LearningSpringBoot.backstone.App01_PlayZooGame">
        <constructor-arg ref="game_controller"/>
    </bean>
</beans>